<body>
    <div class="signup-visual">
        <div class="row">
          <div class="col-xs-8 col-xs-offset-4"><br><br><br><br><br><br><br>
            <div class="main-visual-content">
            <h3><strong>Welcome to くわしめとりっぷ　!</strong></h3>
            <h3 class="fas fa-suitcase-rolling"><strong> 新規登録</strong></h3>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <%= f.label :name, "名　前　>　>" %>
                  <%= f.text_field :name, autocomplete: "name", :size=>"30" %>
                </div>
                <div class="field">
                 <%= f.label :email, "メールアドレス" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %>
                </div>

                <div class="field">
                  <%= f.label :password, "パスワ ー ド >" %>
                  <% if @minimum_password_length %>

                  <%= f.password_field :password, autocomplete: "new-password", :size=>"30" %>
                  <strong><em>(半角英数字　<%= @minimum_password_length %> 文字以上)</em></strong>
                  <% end %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, "パスワ ー ド > " %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"30" %>
                  <p class="fas fa-pencil-alt">もう一度</p>
                </div>

                <div class="field">
                  <%= f.label :age, "年　齢　>" %>
                  <%= f.number_field :age %>歳
                </div>

                <div class="field">
                  <strong><p>性　別　>
                    <%= f.radio_button :gender, :true, id:"gender-female" %>
                    <%= f.label :gender, "男性", for:"gender-female" %>
                    <%= f.radio_button :gender, :false, id:"gender-male" %>
                    <%= f.label :gender, "女性", for:"gender-male" %></p></strong>
                </div>

                <div class="actions"><br />
                <%= f.submit "Let'sくわしめとりっぷ", class:"col-xs-5 btn btn-default" %><br />
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
          </div>
      </div>
</body>