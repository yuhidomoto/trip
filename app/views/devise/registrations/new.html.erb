<div class="container">
       <div class="main-visual">
        <div class="row">
          <div class="col-xs-8 col-xs-offset-4">
            <div class="main-visual-content">
            <h4>Welcome to My trip !!</h4>
            <h1 class="fas fa-suitcase-rolling"> Sign up</h1>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <%= f.label :email, "email > > > > " %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %>
                </div>

                <div class="field">
                  <%= f.label :password, "password > > " %>
                  <% if @minimum_password_length %>

                  <%= f.password_field :password, autocomplete: "new-password", :size=>"30" %>
                  <em>(半角英数字　<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, "password > > " %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  <p class="fas fa-pencil-alt">もう一度</p>
                </div>

                <div class="actions"><br />
                <%= f.submit "Sign up", class:"col-xs-5 btn btn-default" %><br />
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
          </div>
  </div>
</div>