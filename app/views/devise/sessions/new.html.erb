<body>
  <div class="login-visual">
        <div class="row">
          <div class="col-xs-8 col-xs-offset-4"><br><br><br>
            <h3><strong>Welcome back to くわしめとりっぷ　!</strong></h3>
            <h3 class="fas fa-suitcase-rolling"> ログイン</h3>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.label :email, "メールアドレス" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"30" %>
            </div>

            <div class="field">
                <%= f.label :password, "パスワ ー ド" %>
                <%= f.password_field :password, autocomplete: "current-password",:size=>"30" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me,"ログインしたままにする" %>
              </div>
            <% end %>

              <%= f.submit "ログイン", class:"col-xs-5 btn btn-default" %>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
  </div>
</body>