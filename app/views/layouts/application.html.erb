<!DOCTYPE html>
  <html>
    <head>
      <title></title>
      <%= favicon_link_tag('trip.ico') %>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <link href="https://use.fontawesome.com/releases/v5.10.2/css/all.css" rel="stylesheet">
      <script src="//maps.google.com/maps/api/js?key=AIzaSyDdQjEEiuNYhOzHxYOIeMrat17jdEruGWQ"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
      <script src="//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" type="text/javascript"></script>
    </head>

    <nav class="navbar navbar-fixed-top" role="navigation">
      <header>
          <ul class="nav pull nav-pills" style="margin-top: 10px;">
            <% if user_signed_in? && request.fullpath.index("/admins/") == nil %>
              <li class="mypage">
                <%= link_to user_path(current_user.id) do %>
                  <%= image_tag "mypage.jpg" %></li>
                  <% end %>

                    <li class="about">
                      <%= link_to homes_about_path do %>
                      <%= image_tag "about.jpg" %></li>
                      <% end %>

                    <li class="logo">
                      <%= link_to root_path do %>
                      <%= image_tag "logo.jpg" %></li>
                      <% end %>

                    <li class="mytrip">
                      <%= link_to mytrips_path do %>
                      <%= image_tag "mytrips.jpg" %></li>
                      <% end %>

                    <li class="mytripnew">
                      <%= link_to new_mytrip_path do %>
                      <%= image_tag "new.jpg" %></li>
                      <% end %>

                    <li class="logout">
                      <%= link_to destroy_user_session_path, method: :delete do %>
                      <%= image_tag "logout.jpg" %></li>
                      <% end %>

                      <% elsif admin_signed_in? && request.fullpath.index("/admins/") %>
                           <ul class="nav navbar-nav">
                            <li class="logo">
                              <%= link_to root_path do %>
                              <%= image_tag "logo.jpg" %></li>
                              <% end %>
                             <li class="logo">
                              <%= link_to admins_top_path do %>
                              <%= image_tag "logo1.jpg" %></li>
                              <% end %>
                            <li class="logo">
                              <%= link_to admins_users_path do %>
                              <%= image_tag "logo3.jpg" %></li>
                              <% end %>
                            <li class="logo">
                              <%= link_to admins_mytrips_path do %>
                              <%= image_tag "logo2.jpg" %></li>
                              <% end %>
                            <li class="logout">
                              <%= link_to destroy_admin_session_path, method: :delete do %>
                              <%= image_tag "logout.jpg" %></li>
                              <% end %>
                            </ul>
                      <% else %>
                        <li class="home">
                          <%= link_to root_path do %>
                        <%= image_tag "home.jpg" %></li>
                        <% end %>

                        <li class="about">
                        <%= link_to homes_about_path do %>
                        <%= image_tag "about.jpg" %></li>
                        <% end %>

                        <li class="logo">
                        <%= link_to root_path do %>
                        <%= image_tag "logo.jpg" %></li>
                        <% end %>

                        <li class="signup">
                          <%= link_to new_user_registration_path do %>
                        <%= image_tag "signup.jpg" %></li>
                        <% end %>

                        <li class="login">
                          <%= link_to new_user_session_path do %>
                        <%= image_tag "login.jpg" %></li>
                        <% end %>
                      <% end %>
                  </ul>
              </header>
           </nav>

             <%= yield %>

            <footer>
              <div class="pull-left" style="margin-left: 710px;">
                <%= link_to new_users_inquiry_path do %>
                  <br><%= image_tag "toiawase.jpg" %></li>
                <% end %>
              </div>
              <div class="pull-right" style="margin-right: 65px;">
                <h4 class="fab fa-twitter-square"></h4>
                <h4 class="fab fa-facebook-square"></h4>
                <h4 class="fab fa-youtube-square"></h4><br>
                <div class="logo">
                  <%= link_to new_admin_session_path do %>
                  <%= image_tag "admin.jpg" %></div>
                  <% end %>
              <div id="footer_copr">
                <p id="copyright">Copyright &copy;&nbsp; 株式会社くわしめとりっぷ　All rights reserved.</p>
            </footer>
</html>
