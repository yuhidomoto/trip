<!DOCTYPE html>
  <html>
    <head>
      <title></title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <link href="https://use.fontawesome.com/releases/v5.10.2/css/all.css" rel="stylesheet">
      <script src="//maps.google.com/maps/api/js?key=AIzaSyDdQjEEiuNYhOzHxYOIeMrat17jdEruGWQ"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
      <script src="//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" type="text/javascript"></script>
    </head>

    <nav class="navbar navbar-fixed-top" role="navigation">
      <header>
          <ul class="nav pull nav-pills" style="margin-top: 10px;">
            <% if user_signed_in? && request.fullpath.index("/admins/") == nil %>
              <li class="mypage">
                <%= link_to user_path(current_user.id) do %>
                  <%= image_tag "mypage.jpg" %></li>
                  <% end %>

                    <li class="about">
                      <%= link_to homes_about_path do %>
                      <%= image_tag "about.jpg" %></li>
                      <% end %>

                    <li class="logo">
                      <%= link_to root_path do %>
                      <%= image_tag "logo.jpg" %></li>
                      <% end %>

                    <li class="mytrip">
                      <%= link_to mytrips_path do %>
                      <%= image_tag "mytrips.jpg" %></li>
                      <% end %>

                    <li class="logout">
                      <%= link_to destroy_user_session_path, method: :delete do %>
                      <%= image_tag "logout.jpg" %></li>
                      <% end %>

                      <% elsif admin_signed_in? && request.fullpath.index("/admins/") %>
                           <ul class="nav navbar-nav">
                              <li><%= link_to "　くわしめとりっぷ　", root_path %></li>
                              <li><%= link_to "　管理者トップ　", admins_top_path %></li>
                              <li><%= link_to "　会員一覧　", admins_users_path %></li>
                              <li><%= link_to "　投稿一覧　", admins_mytrips_path %></li>
                              <li><%= link_to "　ログアウト　", destroy_admin_session_path, method: :delete %></li>
                          </ul>
                      <% else %>
                        <li class="home">
                          <%= link_to root_path do %>
                        <%= image_tag "home.jpg" %></li>
                        <% end %>

                        <li class="about">
                        <%= link_to homes_about_path do %>
                        <%= image_tag "about.jpg" %></li>
                        <% end %>

                        <li class="logo">
                        <%= link_to root_path do %>
                        <%= image_tag "logo.jpg" %></li>
                        <% end %>

                        <li class="signup">
                          <%= link_to new_user_registration_path do %>
                        <%= image_tag "signup.jpg" %></li>
                        <% end %>

                        <li class="login">
                          <%= link_to new_user_session_path do %>
                        <%= image_tag "login.jpg" %></li>
                        <% end %>
                      <% end %>
                  </ul>
              </header>
           </nav>

             <%= yield %>

            <footer>
              <div class="pull-right" style="margin-right: 105px;">
                <h4 class="fab fa-twitter-square"></h4>
                <h4 class="fab fa-facebook-square"></h4>
                <h4 class="fab fa-youtube-square"></h4><br>
              <%= link_to "管理者はこちら　＞", new_admin_session_path %><br>
              <div id="footer_copr">
                <p id="copyright">Copyright &copy;&nbsp; 株式会社YuhiDomoto All rights reserved.</p>
            </footer>
</html>
