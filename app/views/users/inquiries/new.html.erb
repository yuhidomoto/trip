<div class="visual">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-2"><br><br>
        <h2><strong>お問い合わせ</strong></h2>
        <%= form_for @inquiry, url: users_inquiries_path do |f| %>

        <h3>件名</h3>
        <%= f.text_field :title, class: 'form-control' %>
        <h3>内容</h3>
        <%= f.text_area :body, class: 'form-control' %><br>
        <%= f.submit '送信', class: "btn btn-default col-xs-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>