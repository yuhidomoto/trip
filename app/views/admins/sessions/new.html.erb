<body>
  <div class="login-visual">
        <div class="row">
          <div class="col-xs-6 col-xs-offset-4">
            <h2 class="fas fa-suitcase-rolling">　Log in</h2><br><br>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="form-group">
                <div class="col-xs-2">
                 <h4><%= f.label :email, 'Email', class: 'control-label' %></h4>
               </div>
                <div class="col-xs-5">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %><br>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <div class="col-xs-2">
                 <h4><%= f.label :password, 'Password', class: 'control-label' %></h4>
                </div>
                <div class="col-xs-5">
                  <%= f.password_field :password, autocomplete: "current-password",class: 'form-control' %>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="row">
              <div class="form-group">
                <div class="col-xs-5 col-xs-offset-3">
                  <%= f.check_box :remember_me %>
                <%= f.label :remember_me,"ログインしたままにする" %>
                </div>
            </div>
          </div>
            <% end %>

              <%= f.submit "Log in", class:"col-xs-5 col-xs-offset-2 btn btn-default" %>
            <% end %>

            <%= render "admins/shared/links" %><br><br><br><br><br><br><br>
          </div>
        </div>
  </div>
</body>