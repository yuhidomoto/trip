<body>
    <div class="admin-visual">
        <div class="row">
          <div class="col-xs-9 col-xs-offset-3">
            <div class="main-visual-content">
              <h2 class="fas fa-suitcase-rolling"> Sign up</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="form-group">
                <div class="col-xs-2">
                 <h4><%= f.label :email, '　Email', class: 'control-label' %></h4>
               </div>
                <div class="col-xs-5">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="col-xs-3">
                  <h4><%= f.label :password, '　Password', class: 'control-label' %></h4>
                </div>
                <div class="col-xs-4">
                  <% if @minimum_password_length %>
                  <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
                  <em>(半角英数字　<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.label :password_confirmation, '　もう一度', class: 'control-label' %>
                </div>
                <div class="col-xs-4">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
                </div>
              </div>
            </div>

                <div class="actions">
                  <%= f.submit "Sign up", class: "col-xs-5 col-xs-offset-2 btn btn-default" %><br />
                </div>
              <% end %>
              <%= render "admins/shared/links" %>
            </div>
          </div>
      </div>
  </div>
</body>

