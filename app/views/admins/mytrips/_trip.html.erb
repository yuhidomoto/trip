<div class="col-md-4" >
  <div class= "thumbnail trip_box2" >
    <%= attachment_image_tag mytrip, :image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg", size:"325x325" %>
    <div class="caption">
      <p>
        国名　<%= country[mytrip.country].translation(:ja) %> (<%= mytrip.country %>)
      </p>
      <p>
        <%= mytrip.important[0..18] %>
      </p>
      <p>　コメント<%= mytrip.comments.count %>件
      <%= link_to "詳細", admins_mytrip_path(mytrip.id), class: "col-xs-7 btn btn-default" %></p>
    </div>
  </div>
</div>
