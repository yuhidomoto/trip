<div class="admin-visual2">
  <div class="row">
    <% if flash[:notice] %>
      <div class="col-xs-6 col-xs-offset-1" >
        <div class="flash">
          <h4><strong>
            <%= flash[:notice] %>
          </strong></h4>
        </div>
      </div>
    <% end %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.4/css/all.css">
        <div id="page_top"><a href="#"></a></div>

      <br><h3><strong>　投稿一覧　</strong></h3>
      <div class="row">
        <div class="font">　Europe</div>
        <% @region_europe.first(3).each do |europe| %>
          <%= render 'trip', mytrip: europe %>
        <% end %>
        <%= link_to "ヨーロッパ一覧", admins_seemore_path(category:"ヨーロッパ"),class: "col-xs-2 col-xs-offset-10 btn btn-info" %>
      </div>

      <div class="row">
        <div class="font">　Americas</div>
        <% @region_americas.first(3).each do |americas| %>
          <%= render 'trip', mytrip: americas %>
        <% end %>
        <%= link_to "アメリカ州一覧", admins_seemore_path(category:"アメリカ州"),class: "col-xs-2 col-xs-offset-10 btn btn-info" %>
      </div>

      <div class="row">
        <div class="font">　Africa</div>
        <% @region_africa.first(3).each do |africa| %>
          <%= render 'trip', mytrip: africa %>
        <% end %>
        <%= link_to "アフリカ一覧", admins_seemore_path(category:"アフリカ"),class: "col-xs-2 col-xs-offset-10 btn btn-info" %>
      </div>

      <div class="row">
        <div class="font">　Asia</div>
        <% @region_asia.first(3).each do |asia| %>
          <%= render 'trip', mytrip: asia %>
        <% end %>
        <%= link_to "アジア一覧", admins_seemore_path(category:"アジア"),class: "col-xs-2 col-xs-offset-10 btn btn-info" %>
      </div>

      <div class="row">
        <div class="font">　Oceania</div>
        <% @region_oceania.first(3).each do |oceania| %>
          <%= render 'trip', mytrip: oceania %>
        <% end %>
        <%= link_to "オセアニア一覧", admins_seemore_path(category:"オセアニア"),class: "col-xs-2 col-xs-offset-10 btn btn-info" %>
      </div>
    </div>
  </div>
</div>

