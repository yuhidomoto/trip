<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1" style="border: 1px solid #000;">
			<h2>会員情報編集</h2><br><br>
			<%= form_for(@user, url:admins_user_path(@user), method: :patch) do |f| %>
				<div class="row">
            <div class="form-group">
              <div class="col-xs-2">
                <h4><%= f.label :name, "名前", class: 'control-label' %></h4>
              </div>
                <div class="col-xs-5">
                <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="row">
          <div class="form-group">
            <div class="col-xs-2">
             <h4><%= f.label :email, 'メールアドレス', class: 'control-label' %></h4>
           </div>
            <div class="col-xs-5">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-2">
              <h4><%= f.label :age, '年齢', class: 'control-label' %></h4>
            </div>
              <div class="col-xs-3">
              <%= f.number_field :age, class: 'form-control' %>
            </div>
            <div class="col-xs-1">
              <h4><strong>歳</strong></h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-3">
              <h4><strong>性別</strong><h4>
            </div>
            <div class="col-xs-3">
                <%= f.radio_button :gender, :true, id:"gender-female" %>
                <%= f.label :gender, "男性　", for:"gender-female" %>
                <%= f.radio_button :gender, :false, id:"gender-male" %>
                <%= f.label :gender, "女性　", for:"gender-male" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
              <div class="col-xs-2">
              <p></p>
            </div>
            <div class="col-xs-6">
              <%= link_to "退会へ",user_path(@user.id), method: :delete, data: {confirm: "本当に退会させますか？"}, class: "col-xs-4 btn btn-danger destroy_user_#{@user.id}" %><br><br>
            </div>
          </div>
        </div>

			<%= f.submit "編集内容を保存する", class: "col-xs-2 col-xs-offset-2 btn btn-default" %><br><br><br>
			<% end %>
		 </div>
	</div>
</div>