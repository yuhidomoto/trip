<body>

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1" >
          <div class="row">
              <div class="col-xs-5" >
                <h4><strong>投稿者情報</strong></h4>
                  <table class="table table-bordered">
                        <tr>
                            <th>名前</th>
                            <th>年齢</th>
                            <th>性別</th>
                        </tr>
                        <tr>
                            <td><%= @mytrip.user.name %></td>
                            <td><%= @mytrip.user.age %>歳</td>
                            <td><% @mytrip.user.gender %>
                              <% if @mytrip.user.gender == true %>
                                 男性
                              <% else %>
                                 女性
                              <% end %>
                          </td>
                        </tr>
                  </table>
              </div>
          </div>

            <%= render 'mytrips/country', country: @country %>

              <div class="row">
                 <div class="col-lg-3">
                    <div class="thumbnail">
                      国名　<%= @country.translation(:ja) %> (<%= @mytrip.country %>)
                    </div>
                </div>

                 <div class="col-lg-3">
                    <div class="thumbnail">
                     地域<br>
                     <%= @mytrip.area %>
                   </div>
                </div>

                 <div class="col-lg-3">
                   <div class="thumbnail">
                     時差　<%= @mytrip.time_difference %>時間
                   </div>
                </div>

                 <div class="col-lg-3">
                   <div class="thumbnail">
                    気候<br>
                    <%= @mytrip.climate %>
                  </div>
                </div>

                 <div class="col-lg-3">
                   <div class="thumbnail">
                    行った月<br>
                    <%= @mytrip.month %>月<%= @mytrip.season %>
                  </div>
                </div>

                 <div class="col-lg-3">
                   <div class="thumbnail">
                    治安<br>
                    <%= @mytrip.security %>
                  </div>
                </div>

                <div class="col-lg-3">
                  <div class="thumbnail">
                    物価<br>
                    <%= @mytrip.prices %>
                  </div>
                </div>

                <div class="col-lg-3">
                  <div class="thumbnail">
                    交通<br>
                    <%= @mytrip.traffic %>
                  </div>
                </div>

                <div class="col-lg-3">
                  <div class="thumbnail">
                    飛行時間<br>
                    <%= @mytrip.security %>
                  </div>
                </div>

                <div class="col-lg-3">
                  <div class="thumbnail">
                    航空会社<br>
                    <%= @mytrip.airline %>
                  </div>
                </div>

                <div class="col-lg-3">
                  <div class="thumbnail">
                    航空会社の評価<br>
                    <%= @mytrip.airline_comment %>
                  </div>
                </div>

                <div class="col-lg-3">
                  <div class="thumbnail">
                    誰と行った？<br>
                    <%= @mytrip.with_whom %>
                  </div>
                </div>

                <div class="col-lg-4">
                  <div class="thumbnail">
                    日数<br>
                    <%= @mytrip.days %>
                  </div>
                </div>

               <div class="col-lg-4">
                <div class="thumbnail">
                    総額<br>
                    <%= @mytrip.total_price %>
                  </div>
                </div>

                <div class="col-lg-4">
                  <div class="thumbnail">
                    クレジットカード<br>
                    <%= @mytrip.card %>
                  </div>
                </div>

                <div class="col-lg-4">
                  <div class="thumbnail">
                    トイレ事情<br>
                    <%= @mytrip.bathroom %>
                  </div>
                </div>

               <div class="col-lg-4">
                <div class="thumbnail">
                    言語<br>
                    <%= @mytrip.language %>
                  </div>
                </div>

               <div class="col-lg-4">
                <div class="thumbnail">
                    行くべき場所<br>
                    <%= @mytrip.must %>
                  </div>
                </div>

                <div class="col-lg-4">
                  <div class="thumbnail">
                    <%= attachment_image_tag @mytrip, :image, :fill, 360, 260, format: 'jpeg' %>
                  </div>
                </div>

                <div class="col-lg-4">
                  <div class="thumbnail">
                    良かった点<br>
                    <%= @mytrip.good_point %>
                  </div>
                </div>

                <div class="col-lg-4">
                  <div class="thumbnail">
                    悪かった点<br>
                    <%= @mytrip.bad_point %>
                  </div>
                </div>
            </div>

                  <% if @mytrip.user == current_user %>
                    <%= link_to "編集",edit_mytrip_path(@mytrip.id), class: "btn btn-default edit_mytrip_#{@mytrip.id}" %>
                    <%= link_to "削除",mytrip_path(@mytrip.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger destroy_mytrip_#{@mytrip.id}" %>
                  <% end %>

              <table id="comment">
                  <%= render 'mytrips/comment',mytrip: @mytrip %>
              </table>

                    <%= form_with model:[@mytrip, @comment], data: {remote: true} do |f| %>

               <div class="row">
                  <div class="col-xs-8 col-xs-offset-2" >
                    <%= f.text_area :body, rows:'5', class: "form-control",placeholder: "コメントを残してみましょう" %><br>
                    <%= f.submit "送信する", class: "btn btn-default pull-right" %>
                    <% end %>
                  </div>
               </div>
        </div>
    </div>
</body>



