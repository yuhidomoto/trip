<div class="container">
	<div class="row">
      <div class="col-xs-9 col-xs-offset-1">

	<%= link_to "post my trip!", new_mytrip_path,class: "col-xs-3 col-xs-offset-8 btn btn-default" %>


			  <% @mytrips.each do |mytrip| %>
			<div class="row">
	   			<div class="col-sm-4 col-md-4">

			    	  <div class="thumbnail">
				      		<%= attachment_image_tag @mytrip, :image, :fill, 300, 300, format: 'jpeg' %>
				      		<div class="caption">
							        <h3><%= mytrip.country %></h3>
							        <p><%= mytrip.important %></p>
							        <%= link_to "Dtails",mytrip_path(mytrip.id), class:"btn btn-default" %>
					      	</div>
	   		 			</div>
	  				</div>
				 <% end %>
			 </div>
		 </div>
	 </div>
</div>