<body>
	<div class="row">
     <div class="col-xs-10 col-xs-offset-1">
				<%= link_to "post my trip!", new_mytrip_path,class: "col-xs-5 btn btn-default" %><br><br><br>

			  <% @mytrips.each do |mytrip| %>
				<div class="row">
		   			<div class="col-xs-4 col-xs-4">
				    	  <div class="thumbnail">
					      		<%= attachment_image_tag mytrip, :image, :fill, 300, 300, format: 'jpeg' %>
					      		<div class="caption">
								        <p>国名　<%= @country[mytrip.country].translation(:ja) %> (<%= mytrip.country %>)</p>
								        <p><%= mytrip.important %></p>
								        <%= link_to "Details",mytrip_path(mytrip.id), class: "btn btn-default" %>
						      	</div>
		   		 			</div>
		  			</div>
					 <% end %>
				</div>
		</div>
	</div>
</body>
