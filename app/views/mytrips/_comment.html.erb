<% mytrip.comments.each do |comment| %>
	<tr id="comment_<%= comment.id %>">
		<td><%= comment.user.name %>/<%= comment.body %></td>
		<% if comment.user == current_user %>
			<td><%= link_to ' 削除 ', mytrip_comments_path(comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
		<% end %>
	</tr>
<% end %>